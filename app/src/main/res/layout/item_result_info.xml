<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_margin"
        android:layout_marginStart="@dimen/item_margin"
        android:layout_marginTop="@dimen/item_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_contain">

            <TextView
                android:id="@+id/tv_Courier_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顺丰：12684614684684"
                android:textSize="@dimen/text_size_title" />

            <TextView
                android:id="@+id/tv_Courier_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:text="问题件"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:id="@+id/image_express"
                android:layout_width="@dimen/img_normal_weight"
                android:layout_height="@dimen/img_normal_height"
                android:layout_below="@+id/tv_Courier_number"
                android:layout_centerVertical="true"
                android:layout_marginTop="6dp"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/img_normal_height"
                android:layout_alignTop="@+id/image_express"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:layout_toEndOf="@+id/image_express"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tv_Courier_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="孤芳自赏滚珠丝杠发分子放在身份证孙菲菲S分支房租费"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_normal" />


                <TextView
                    android:id="@+id/tv_Courier_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:text="2017/01/01 04:21:15"
                    android:textSize="@dimen/text_size_normal" />


            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>